root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.markdown,*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space

[**.js]
indent_style = tab

[**.css]
indent_style = tab

[**.html]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = tab
indent_size = 2

